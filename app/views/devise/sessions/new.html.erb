<main class="container pt-5 mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="pb-3 pt-4 mt-5 text-start sign-up-div card mx-auto">
        <div class="card-body text-white px-5">
          <h3 class="text-center mb-3">LOGIN</h3>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class: "form-label"  %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " mx-auto mb-4 form-control" %>
            </div>

            <div class="field">
              <%= f.label :password, class: "form-label"  %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: " mx-auto mb-4 form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: "form-label btn btn-lg btn-dark mt-1 w-100"  %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</main>